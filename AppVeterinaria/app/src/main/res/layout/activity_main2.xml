<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="99dp"
            android:layout_height="89dp"
            app:srcCompat="@drawable/login" />

        <TextView
            android:text="REALICE SU OPERACION AQUI"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textSize="16dp"
            android:textColor="@color/celesteoscuro"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <Button
        android:id="@+id/btaccederregistrar"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar mascota"
        android:backgroundTint="@color/azul"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="367dp" />

    <Button
        android:id="@+id/btaccederbuscarcliente"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar Cliente"
        android:backgroundTint="@color/azul"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="491dp" />
    <Button
        android:id="@+id/btlistado"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listado de mascotas"
        android:backgroundTint="@color/azul"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="491dp" />
</LinearLayout>